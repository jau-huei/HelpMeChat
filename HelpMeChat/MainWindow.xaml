<Window x:Class="HelpMeChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelpMeChat"
        mc:Ignorable="d"
        Title="HelpMeChat" Height="620" Width="800"
        Background="#F8FAFC">
    <Window.Resources>
        <!-- 主题配色 -->
        <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#1E293B"/>
        <SolidColorBrush x:Key="HeaderFg" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrushColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextBrush" Color="#334155"/>

        <!-- 扁平按钮样式 -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 输入样式 -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="4,4,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
        </Style>

        <!-- 卡片容器样式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#000000" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <local:FirstLineConverter x:Key="FirstLineConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题 -->
        <Grid Background="{StaticResource HeaderBg}" Grid.Row="0">
            <StackPanel Orientation="Vertical" Margin="12,0" VerticalAlignment="Center">
                <TextBlock Text="HelpMeChat" Foreground="{StaticResource HeaderFg}" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="微信快速回复助手" Foreground="#A7F3D0" FontSize="11"/>
            </StackPanel>
        </Grid>

        <!-- 主体设置区域 -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TabControl Grid.Column="0">
                    <TabItem>
                        <TabItem.Header>
                            <TextBlock Text="快速回复" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" MinHeight="120"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListBox x:Name="PresetRepliesListBox" Grid.Row="0" ItemsSource="{Binding PresetReplies}" SelectionMode="Single" SelectionChanged="PresetRepliesListBox_SelectionChanged" AlternationCount="2">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="Margin" Value="2"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                                <Setter Property="Background" Value="#F8FAFC"/>
                                            </Trigger>
                                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E0F2FE"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#C7E4F7"/>
                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Key}" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding Value, Converter={StaticResource FirstLineConverter}}" FontStyle="Italic" TextTrimming="CharacterEllipsis" MaxWidth="300" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Border Grid.Row="1" Background="#F3F4F6" Padding="8" Margin="0,6,0,0">
                                <StackPanel Orientation="Vertical">
                                    <Label Content="显示名称"/>
                                    <TextBox x:Name="KeyTextBox" Margin="4"/>
                                    <Label Content="回复内容"/>
                                    <TextBox x:Name="ValueTextBox" Margin="4" Height="80" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="添加" Click="AddReply_Click"/>
                                        <Button Content="修改" Click="ModifyReply_Click"/>
                                        <Button Content="删除" Click="RemoveReply_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <TextBlock Text="AI 设置" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                        </TabItem.Header>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical" Margin="6">
                                <Label Content="微信用户名"/>
                                <TextBox Text="{Binding WeChatUserName}" Margin="4"/>

                                <Label Content="Ollama 服务地址"/>
                                <TextBox Text="{Binding OllamaService}" Margin="4"/>

                                <Label Content="模型名称"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding AvailableModels}" SelectedItem="{Binding Model}" Grid.Column="0"/>
                                    <Button Grid.Column="1" Content="刷新模型" Click="RefreshModels_Click"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <TextBlock Text="AI 提示词" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" MinHeight="120"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListBox x:Name="AiConfigsListBox" Grid.Row="0" ItemsSource="{Binding AiConfigs}" SelectionMode="Single" SelectionChanged="AiConfigsListBox_SelectionChanged" AlternationCount="2">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="Margin" Value="2"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                                <Setter Property="Background" Value="#F8FAFC"/>
                                            </Trigger>
                                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E0F2FE"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#C7E4F7"/>
                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding Prompt, Converter={StaticResource FirstLineConverter}}" FontStyle="Italic" TextTrimming="CharacterEllipsis" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Border Grid.Row="1" Background="#F3F4F6" Padding="8" Margin="0,6,0,0">
                                <StackPanel Orientation="Vertical">
                                    <Label Content="设定名称"/>
                                    <TextBox x:Name="AiNameTextBox" Margin="4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="是否共享" VerticalAlignment="Center"/>
                                        <CheckBox x:Name="AiIsSharedCheckBox" Margin="4" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Label Content="提示词"/>
                                    <TextBox x:Name="AiPromptTextBox" Margin="4" Height="80" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="添加" Click="AddAiConfig_Click"/>
                                        <Button Content="修改" Click="ModifyAiConfig_Click"/>
                                        <Button Content="删除" Click="RemoveAiConfig_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <TextBlock Text="(进阶)聊天数据" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                        </TabItem.Header>
                        <StackPanel Orientation="Vertical" Margin="6">
                            <Label Content="微信ID"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="WeChatIdTextBox" Text="{Binding WeChatId}" Grid.Column="0" Margin="4"/>
                                <Button Grid.Column="1" Content="获取密码" Click="GetWeChatKey_Click" Margin="4"/>
                                <Button Grid.Column="2" Content="清除密码(禁用)" Click="ClearWeChatKey_Click" Margin="4" Width="100"/>
                            </Grid>
                            <TextBlock Text="{Binding WeChatKeyDisplay}" Margin="4" Foreground="{StaticResource TextBrush}"/>
                            <Label Content="微信数据库路径"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding WeChatDbPath}" Grid.Column="0" Margin="4"/>
                                <Button Grid.Column="1" Content="选择文件夹" Click="SelectWeChatDbPath_Click" Margin="4"/>
                            </Grid>
                            <Label Content="AI 上下文消息数量"/>
                            <TextBox Text="{Binding AiContextMessageCount}" Margin="4"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <Grid Grid.Column="1" VerticalAlignment="Top" Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="保存配置" Grid.Column="1" Click="SaveConfig_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
