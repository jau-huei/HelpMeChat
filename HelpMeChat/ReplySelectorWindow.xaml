<Window x:Class="HelpMeChat.ReplySelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择回复" Height="200" Width="300" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True" ShowInTaskbar="False">
    <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
        <StackPanel>
            <Button x:Name="Reply1Button" Content="好的，谢谢！" Click="Reply1_Click" Margin="5"/>
            <Button x:Name="Reply2Button" Content="请稍等一下。" Click="Reply2_Click" Margin="5"/>
            <Button x:Name="Reply3Button" Content="明白了。" Click="Reply3_Click" Margin="5"/>
        </StackPanel>
    </Border>
</Window>